            android:name="com.opentmn.opentmn.screens.category.CategoryActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.opentmn.opentmn.screens.result.GameResultActivity"
            android:screenOrientation="portrait"/>

