<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_1"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:orientation="vertical"
            android:scaleX="1.5"
            android:scaleY="1.5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fact_layout"
                    android:layout_width="269dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/toolbar_height">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fact_substrate" />

                    <com.opentmn.opentmn.widget.TextView
                        android:id="@+id/fact_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:text="Именно столько человек проживают в Тюмени"
                        android:textColor="@color/text_brown_fact"
                        android:textSize="17sp"
                        app:customTypeface="fonts/FiraSans-Medium.otf" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/logo_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-8dp"
                    android:src="@mipmap/logoshine"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/count_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="195dp">

                    <com.opentmn.opentmn.widget.TextView
                        android:id="@+id/count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/text_brown"
                        android:textSize="45sp"
                        app:customTypeface="fonts/FiraSans-Heavy.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:src="@mipmap/num_of_players" />

                    <com.opentmn.opentmn.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="4dp"
                        android:text="Уже играют"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        app:customTypeface="fonts/FiraSans-Book.otf" />
                </FrameLayout>

            </FrameLayout>

            <com.opentmn.opentmn.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="@string/auth_login_through"
                android:textColor="@color/text_brown"
                android:textSize="22sp"
                app:customTypeface="fonts/FiraSans-Heavy.otf" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:src="@mipmap/title_underline" />

            <Button
                android:id="@+id/vkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_vk_selector" />

            <Button
                android:id="@+id/fbButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_fb_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.opentmn.opentmn.widget.TextView
                    android:id="@+id/enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Войти"
                    android:textColor="@color/text_blue_tr"
                    android:textSize="16sp"
                    app:customTypeface="fonts/FiraSans-Medium.otf" />

                <com.opentmn.opentmn.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text=" или "
                    android:textColor="@color/text_brown_light"
                    android:textSize="16sp"
                    app:customTypeface="fonts/FiraSans-Book.otf" />

                <com.opentmn.opentmn.widget.TextView
                    android:id="@+id/reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="Зарегистрироваться"
                    android:textColor="@color/text_blue_tr"
                    android:textSize="16sp"
                    app:customTypeface="fonts/FiraSans-Medium.otf" />

            </LinearLayout>

            <com.opentmn.opentmn.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="через почту"
                android:textColor="@color/text_brown_light"
                android:textSize="16sp"
                app:customTypeface="fonts/FiraSans-Book.otf" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.opentmn.opentmn.widget.TextView
                    android:id="@+id/rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:textColor="@color/text_brown_light"
                    android:textSize="10sp"
                    app:customTypeface="fonts/FiraSans-Book.otf" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <com.opentmn.opentmn.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>




</FrameLayout>