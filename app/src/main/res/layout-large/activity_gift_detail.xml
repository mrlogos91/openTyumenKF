<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="143dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/balance_top_substrate"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="36dp">

                    <com.opentmn.opentmn.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:text="Баланс"
                        android:textColor="@color/text_brown"
                        android:textSize="35sp"
                        app:customTypeface="fonts/FiraSans-Heavy.otf" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:scaleX="1.5"
                        android:scaleY="1.5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="2dp"
                            android:src="@mipmap/substrate_coin_2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_coin_2" />

                        <com.opentmn.opentmn.widget.TextView
                            android:id="@+id/coins_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="23dp"
                            android:gravity="center"
                            android:textColor="@color/coin_green_text"
                            android:textSize="21sp"
                            app:customTypeface="@string/font_heavy_path"
                            tools:text="900" />

                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="262dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@mipmap/b_prize_substrate"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="306dp"
                android:layout_height="169dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:background="@mipmap/prize_pic_substrate_big">

                <ImageView
                    android:id="@+id/pic_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp" />

            </FrameLayout>

            <com.opentmn.opentmn.widget.TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="Подарок"
                android:textColor="@color/text_brown"
                android:textSize="18sp"
                app:customTypeface="@string/font_heavy_path" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="9dp"
                        android:src="@mipmap/shop_coins_substrate_bordered" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_coin_1" />

                    <com.opentmn.opentmn.widget.TextView
                        android:id="@+id/gift_coins_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/coin_green_text"
                        android:textSize="15sp"
                        app:customTypeface="@string/font_heavy_path" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <com.opentmn.opentmn.widget.TextView
                        android:id="@+id/count_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="12 шт."
                        android:textColor="@color/game_end_text_red"
                        android:textSize="15sp"
                        app:customTypeface="fonts/FiraSans-Heavy.otf" />

                    <com.opentmn.opentmn.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:text="осталось"
                        android:textColor="@color/text_brown"
                        android:textSize="11sp"
                        app:customTypeface="fonts/FiraSans-Book.otf" />

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.opentmn.opentmn.widget.TextView
                android:id="@+id/desc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/gift_desc_text"
                android:textSize="30sp"
                app:customTypeface="@string/font_book_path" />
        </ScrollView>

        <com.opentmn.opentmn.widget.Button
            android:id="@+id/buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_blue_selector"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="Получить приз"
            android:textSize="16sp"
            app:customTypeface="@string/font_heavy_path" />

    </LinearLayout>

    <com.opentmn.opentmn.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Подарок"/>

</FrameLayout>