<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/toolbar_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5">

        <com.opentmn.opentmn.widget.Button
            android:id="@+id/invite_vk_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_vk_invite_selector"
            android:paddingBottom="@dimen/button_bottom_padding"
            android:text="пригласить из вконтакте"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            app:customTypeface="@string/font_heavy_path" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/b_text_field"
        android:orientation="horizontal"
        android:scaleX="1.5"
        android:scaleY="1.5">

        <com.opentmn.opentmn.widget.EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/search_hint"
            android:singleLine="true"
            android:textSize="14sp"
            app:customTypeface="@string/font_medium_path" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_search" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>

</LinearLayout>