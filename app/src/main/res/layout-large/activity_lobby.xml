<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_1"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:paddingTop="206dp">

            <com.opentmn.opentmn.widget.LobbyRoundView
                android:id="@+id/round_1_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <com.opentmn.opentmn.widget.LobbyRoundView
                android:id="@+id/round_2_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <com.opentmn.opentmn.widget.LobbyRoundView
                android:id="@+id/round_3_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <com.opentmn.opentmn.widget.Button
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_blue_selector"
                android:paddingBottom="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="Играть"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                app:customTypeface="@string/font_heavy_path" />

            <com.opentmn.opentmn.widget.Button
                android:id="@+id/surrender_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@null"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:text="Сдаться"
                android:textAllCaps="false"
                android:textColor="@color/text_blue_tr"
                android:textSize="16sp"
                app:customTypeface="@string/font_medium_path" />

        </LinearLayout>

    </ScrollView>

    <com.opentmn.opentmn.widget.LobbyHeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5" />

    <com.opentmn.opentmn.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Игра"/>

</FrameLayout>