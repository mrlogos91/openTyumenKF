<resources>

    <!-- Base application theme. -->
    <style name="Theme.OpenTmn" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/Theme.OpenTmn.Button</item>
        <item name="buttonStyle">@style/Theme.OpenTmn.Button</item>
        <item name="android:editTextStyle">@style/Theme.OpenTmn.EditText</item>
        <item name="editTextStyle">@style/Theme.OpenTmn.EditText</item>
    </style>

    <style name="Theme.OpenTmn.Menu" parent="Theme.OpenTmn">
        <item name="colorPrimaryDark">@color/menu_status_bar</item>
    </style>

    <style name="Theme.OpenTmn.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.OpenTmn.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.OpenTmn.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.OpenTmn.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Theme.OpenTmn.Button.Answer" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_answer_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">@dimen/answer_button_padding</item>
        <item name="android:paddingRight">@dimen/answer_button_padding</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
    </style>

</resources>
