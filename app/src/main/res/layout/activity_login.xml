<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_1"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/fact_layout"
                android:layout_width="269dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/toolbar_height">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fact_substrate"/>

                <com.opentmn.opentmn.widget.TextView
                    android:id="@+id/fact_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/text_brown_fact"
                    android:textSize="17sp"
                    android:text="Именно столько человек проживают в Тюмени"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:customTypeface="fonts/FiraSans-Medium.otf"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/logo_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-8dp"
                android:visibility="gone"
                android:src="@mipmap/logoshine"/>

            <FrameLayout
                android:id="@+id/count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="195dp"
                android:layout_gravity="center_horizontal">

                <com.opentmn.opentmn.widget.TextView
                    android:id="@+id/count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="45sp"
                    android:textColor="@color/text_brown"
                    app:customTypeface="fonts/FiraSans-Heavy.otf"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:src="@mipmap/num_of_players"/>

                <com.opentmn.opentmn.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:text="Уже играют"
                    android:layout_marginBottom="4dp"
                    app:customTypeface="fonts/FiraSans-Book.otf"/>
            </FrameLayout>

        </FrameLayout>

        <com.opentmn.opentmn.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_login_through"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_brown"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            app:customTypeface="fonts/FiraSans-Heavy.otf"/>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/title_underline"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vkButton"
            android:background="@drawable/button_vk_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fbButton"
            android:background="@drawable/button_fb_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.opentmn.opentmn.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/enter"
                android:text="Войти"
                android:textSize="16sp"
                android:textColor="@color/text_blue_tr"
                app:customTypeface="fonts/FiraSans-Medium.otf"
                />

            <com.opentmn.opentmn.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=" или "
                android:textSize="16sp"
                android:textColor="@color/text_brown_light"
                app:customTypeface="fonts/FiraSans-Book.otf"
                />

            <com.opentmn.opentmn.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/reg"
                android:text="Зарегистрироваться"
                android:textSize="16sp"
                android:textColor="@color/text_blue_tr"
                app:customTypeface="fonts/FiraSans-Medium.otf"
                />

        </LinearLayout>

        <com.opentmn.opentmn.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="через почту"
            android:textSize="16sp"
            android:textColor="@color/text_brown_light"
            app:customTypeface="fonts/FiraSans-Book.otf"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.opentmn.opentmn.widget.TextView
                android:id="@+id/rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/text_brown_light"
                android:layout_marginBottom="8dp"
                app:customTypeface="fonts/FiraSans-Book.otf"
                />

        </FrameLayout>

    </LinearLayout>

    </ScrollView>

    <com.opentmn.opentmn.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"/>




</FrameLayout>