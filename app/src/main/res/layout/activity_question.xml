<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_1"
        android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.opentmn.opentmn.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/question_click_view"
                android:layout_width="318dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/question_substrate"
                    android:layout_marginBottom="20dp"
                    />

                <FrameLayout
                    android:layout_width="210dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/question_cat_substrate"/>

                    <com.opentmn.opentmn.widget.TextView
                        android:id="@+id/category_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/text_brown"
                        android:text="Памятники Тюмени"
                        app:customTypeface="fonts/FiraSans-Medium.otf"/>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="29dp">

                    <com.opentmn.opentmn.widget.TextView
                        android:id="@+id/question_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="34dp"
                        android:layout_marginBottom="24dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:gravity="center"
                        app:customTypeface="fonts/FiraSans-Medium.otf"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/quest_1_image_view"
                            android:layout_width="@dimen/question_num_1_width"
                            android:layout_height="@dimen/question_num_1_height"
                            android:src="@mipmap/num_of_question_1"/>

                        <com.opentmn.opentmn.widget.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:layout_gravity="center"
                            android:alpha="0.5"
                            app:customTypeface="@string/font_heavy_path"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp">

                        <ImageView
                            android:id="@+id/quest_2_image_view"
                            android:layout_width="@dimen/question_num_2_width"
                            android:layout_height="@dimen/question_num_2_height"
                            android:src="@mipmap/num_of_question_1"/>

                        <com.opentmn.opentmn.widget.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:alpha="0.8"
                            app:customTypeface="@string/font_heavy_path"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp">

                        <ImageView
                            android:id="@+id/quest_3_image_view"
                            android:layout_width="@dimen/question_num_3_width"
                            android:layout_height="@dimen/question_num_3_height"
                            android:src="@mipmap/num_of_question_1"/>

                        <com.opentmn.opentmn.widget.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            app:customTypeface="@string/font_heavy_path"/>

                    </FrameLayout>

                    <FrameLayout
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp">

                        <ImageView
                            android:layout_width="@dimen/question_num_2_width"
                            android:layout_height="@dimen/question_num_2_height"
                            android:src="@mipmap/num_of_question_1"/>

                    </FrameLayout>

                    <FrameLayout
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp">

                        <ImageView
                            android:layout_width="@dimen/question_num_1_width"
                            android:layout_height="@dimen/question_num_1_height"
                            android:src="@mipmap/num_of_question_1"/>

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    android:baselineAligned="false"
                    android:layout_gravity="center_horizontal">

                    <com.opentmn.opentmn.widget.Button
                        android:id="@+id/answer_1_button"
                        android:tag="0"
                        android:layout_width="@dimen/answer_button_width"
                        android:layout_height="wrap_content"
                        app:customTypeface="@string/font_medium_path"
                        style="@style/Theme.OpenTmn.Button.Answer"
                        />

                    <com.opentmn.opentmn.widget.Button
                        android:id="@+id/answer_2_button"
                        android:tag="1"
                        android:layout_width="@dimen/answer_button_width"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        app:customTypeface="@string/font_medium_path"
                        style="@style/Theme.OpenTmn.Button.Answer"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal"
                    android:baselineAligned="false"
                    android:layout_marginTop="11dp">

                    <com.opentmn.opentmn.widget.Button
                        android:id="@+id/answer_3_button"
                        android:tag="2"
                        android:layout_width="@dimen/answer_button_width"
                        android:layout_height="wrap_content"
                        app:customTypeface="@string/font_medium_path"
                        style="@style/Theme.OpenTmn.Button.Answer"/>

                    <com.opentmn.opentmn.widget.Button
                        android:id="@+id/answer_4_button"
                        android:tag="3"
                        android:layout_width="@dimen/answer_button_width"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        app:customTypeface="@string/font_medium_path"
                        style="@style/Theme.OpenTmn.Button.Answer"/>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="13dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/quest_time_substrate"/>

                </FrameLayout>

                <com.opentmn.opentmn.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/text_brown"
                    android:textSize="11sp"
                    android:text="Автор вопроса: Иван Сергеевич"
                    app:customTypeface="fonts/FiraSans-Book.otf"/>


            </LinearLayout>

        </LinearLayout>


</FrameLayout>